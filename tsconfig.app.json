{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/types/**/*.ts",
    "src/types/**/*.d.ts",
    "src/types/auto-imports.d.ts",
    "src/types/components.d.ts",
    "src/types/env.d.ts",
    "src/**/*",
    "src/**/*.vue" // ✅ 必须确保 Vue 文件被包含
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    // ✅ 必须项：开启 JSX 支持
    "jsx": "preserve",
    "jsxImportSource": "vue",

    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // API 目录为两级：src/api/<module>/<feature>.ts
      // 需要同时支持 @!/module 与 @!/module/feature 两种引用形态
      "@!/*": ["./src/api/*"],
      "@&/*": ["./src/layouts/components/*"]
    },
    "types": ["node", "vue"]
  },
  "vueCompilerOptions": {
    "strictTemplates": true,
    "target": 3.3,
    "strict": true
  }
}
