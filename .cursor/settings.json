{
  // === 基础环境配置 ===
  "npm.packageManager": "pnpm",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "FORCE_COLOR": "1"
  },

  // === 编辑器外观与行为 ===
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // === 文件与搜索排除 ===
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/pnpm-lock.yaml": false
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true
  },
  "search.useIgnoreFiles": true,
  "search.smartCase": true,

  // === ESLint & Prettier ===
  "eslint.workingDirectories": ["./"],
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue"],
  "prettier.requireConfig": true,

  // === TypeScript 智能增强 ===
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,

  // === Vue ===
  "files.associations": {
    "*.vue": "vue",
    "uno.config.ts": "typescript",
    "*.css": "postcss"
  },
  "vue.codeActions.enabled": true,
  "vue.complete.casing.tags": "pascal",
  "vue.complete.casing.props": "camel",
  "vue.updateImportsOnFileMove.enabled": true,

  // === UnoCSS 核心配置 ===
  "unocss.root": "./",
  "unocss.configFile": "uno.config.ts",
  "unocss.enableIntelliSense": true,
  "unocss.remToPxPreview": true,
  "unocss.colorPreview": true,
  "unocss.languageIds": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json"
  ],

  // === i18n Ally (国际化) ===
  "i18n-ally.localesPaths": ["src/locales/lang"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sortKeys": true,
  "i18n-ally.namespace": false,
  "i18n-ally.pathMatcher": "{locale}.{ext}",
  "i18n-ally.enabledParsers": ["ts", "js", "json"],
  "i18n-ally.sourceLanguage": "zh-CN",
  "i18n-ally.displayLanguage": "zh-CN",
  "i18n-ally.enabledFrameworks": ["vue", "vue-i18n"],
  "i18n-ally.parserOptions": {
    "ts": { "strictObjectKeyAsString": false }
  },
  "i18n-ally.extract.keyPrefix": "",
  "i18n-ally.usage.scanningDirs": ["src"],

  // === Cursor 真实有效的配置 ===
  // 这些是 Cursor 确实支持的配置项
  "cursor.chat.showInEditor": true,
  "cursor.cpp.enableIntelliSense": true, // CPP 指的是 Cursor Prediction Protocol (代码预测)
  "cursor.general.enableCodeActions": true,
  "github.copilot.enable": {
    "*": true
  }
}
