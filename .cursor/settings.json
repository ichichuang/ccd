{
  "npm.packageManager": "pnpm",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    }
  },
  "terminal.integrated.env.osx": {
    "FORCE_COLOR": "1"
  },
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "extensions.ignoreRecommendations": false,
  "editor.suggest.showStatusBar": true,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "vue": true,
    "typescript": true,
    "javascript": true
  },
  "scm.inputFontFamily": "JetBrains Mono",
  "debug.console.fontFamily": "JetBrains Mono",
  "editor.fontFamily": "JetBrains Mono, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "JetBrains Mono, Monaco, 'Courier New', monospace",
  "workbench.startupEditor": "welcomePage",
  "git.openRepositoryInParentFolders": "always",
  "extensions.autoUpdate": true,
  "update.mode": "start",
  "telemetry.telemetryLevel": "off",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "search.useIgnoreFiles": true,
  "search.smartCase": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/pnpm-lock.yaml": false
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true
  },
  "task.allowAutomaticTasks": "on",
  "task.quickOpen.detail": false,
  "task.quickOpen.skip": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.workingDirectories": ["./"],
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue"],
  "vue.updateImportsOnFileMove.enabled": true,
  "unocss.root": "./",
  "unocss.configFile": "unocss/index.ts",
  "unocss.trace.server": "verbose",

  // === Vue 开发配置 ===
  "vue.codeActions.enabled": true,
  "vue.complete.casing.tags": "pascal",
  "vue.complete.casing.props": "camel",
  "vue.updateImportsOnFileMove.enabled": true,

  // === TypeScript 增强配置 ===
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,

  // === 项目特定配置 ===
  "files.associations": {
    "*.vue": "vue",
    "uno.config.ts": "typescript"
  },

  // === Pug 语法和 UnoCSS 配置 ===
  "pug.unocss": {
    "enableAutoComplete": true,
    "enableSyntaxCheck": true,
    "enableAutoFix": true,
    "preferDotSyntax": true,
    "specialChars": [":", "%", "!", "/", "[", "]"],
    "responsivePrefixes": ["sm:", "md:", "lg:", "xl:", "2xl:"],
    "stateVariants": ["hover:", "focus:", "active:", "disabled:"],
    "darkModePrefix": "dark:"
  },
  "pug.format.enable": true,
  "pug.format.semi": false,
  "pug.format.singleQuote": true,
  "pug.format.tabWidth": 2,
  "pug.format.useTabs": false,
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",

  // === 性能优化配置 ===
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "search.useIgnoreFiles": true,
  "search.smartCase": true,

  // === i18n Ally 国际化插件配置 ===
  "i18n-ally.localesPaths": ["src/locales/lang"],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sortKeys": true,
  "i18n-ally.namespace": false,
  "i18n-ally.pathMatcher": "{locale}.{ext}",
  "i18n-ally.dirStructure": "file",
  "i18n-ally.enabledParsers": ["ts", "js"],
  "i18n-ally.sourceLanguage": "zh-CN",
  "i18n-ally.displayLanguage": "zh-CN",
  "i18n-ally.enabledFrameworks": ["vue", "vue-i18n"],
  "i18n-ally.parserOptions": {
    "ts": {
      "strictObjectKeyAsString": false
    }
  },
  "i18n-ally.extract.keyPrefix": "",
  "i18n-ally.extract.keyMaxLength": 100,
  "i18n-ally.extract.parsers.html.attributes": ["alt", "title", "placeholder"],
  "i18n-ally.extract.parsers.html.ignoredTags": ["script", "style"],
  "i18n-ally.review.enabled": true,
  "i18n-ally.review.gutters": true,
  "i18n-ally.annotationInPlace": true,
  "i18n-ally.annotationMaxLength": 50,
  "i18n-ally.editor.preferEditor": true,
  "i18n-ally.readonly": false,
  "i18n-ally.refactor.templates": [
    {
      "name": "vue-i18n",
      "find": "\\$t\\('([^']*)'\\)",
      "replace": "{{ \\$t('$1') }}"
    }
  ],
  "i18n-ally.usage.scanningDirs": ["src"],
  "i18n-ally.usage.ignoredFiles": ["**/*.d.ts", "**/node_modules/**", "**/dist/**"],

  // === Cursor 自动编码配置 ===
  "cursor.general.enableAutoCompletion": true,
  "cursor.general.enableSmartSuggestions": true,
  "cursor.general.enableContextAwareCompletion": true,
  "cursor.general.enableTypeInference": true,
  "cursor.general.enableImportOptimization": true,
  "cursor.general.enableNamingConvention": true,
  "cursor.general.enableErrorHandling": true,
  "cursor.general.enablePerformanceOptimization": true,

  // === 编码规范配置 ===
  "cursor.coding.forceCamelCase": true,
  "cursor.coding.forcePascalCase": true,
  "cursor.coding.forceKebabCase": true,
  "cursor.coding.forceScreamingSnakeCase": true,
  "cursor.coding.enablePathAliases": true,
  "cursor.coding.enableTypeSafety": true,
  "cursor.coding.enableErrorHandling": true,
  "cursor.coding.enablePerformanceOptimization": true,

  // === 自动补全配置 ===
  "cursor.autocomplete.enableVariableCompletion": true,
  "cursor.autocomplete.enableFunctionCompletion": true,
  "cursor.autocomplete.enableTypeCompletion": true,
  "cursor.autocomplete.enableImportCompletion": true,
  "cursor.autocomplete.enableVueCompletion": true,
  "cursor.autocomplete.enableApiCompletion": true,
  "cursor.autocomplete.enableStoreCompletion": true,
  "cursor.autocomplete.enableComposableCompletion": true,

  // === 智能重构配置 ===
  "cursor.refactor.enableAutoRename": true,
  "cursor.refactor.enableImportOptimization": true,
  "cursor.refactor.enableTypeOptimization": true,
  "cursor.refactor.enableErrorHandlingOptimization": true,
  "cursor.refactor.enablePerformanceOptimization": true,

  // === 代码质量配置 ===
  "cursor.quality.enableNamingCheck": true,
  "cursor.quality.enableImportPathCheck": true,
  "cursor.quality.enableTypeSafetyCheck": true,
  "cursor.quality.enableErrorHandlingCheck": true,
  "cursor.quality.enablePerformanceCheck": true,

  // === 项目特定规则 ===
  "cursor.project.enableVueCompositionAPI": true,
  "cursor.project.enableTypeScriptStrict": true,
  "cursor.project.enableESLintRules": true,
  "cursor.project.enableUnocssIntegration": true,
  "cursor.project.enableI18nIntegration": true,
  "cursor.project.enablePathAliasSupport": true
}
