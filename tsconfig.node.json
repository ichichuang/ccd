{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    // ✅ 核心配置文件
    "vite.config.ts",
    "uno.config.ts",
    "eslint.config.ts",
    "vitest.config.ts",
    "cypress.config.ts",
    "playwright.config.ts",
    "commitlint.config.ts",

    // ✅ 接管构建脚本 (这是重点！)
    // 之前从 tsconfig.app.json 移出来的，必须放在这里
    "build/**/*",

    // ✅ 允许构建侧(uno.config/build/*)通过 @ 引用 src 内 SSOT
    // composite 项目要求：凡被导入的文件必须属于 include/files
    "src/constants/**/*.ts",
    "src/utils/theme/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
